<div class="container">
<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>
	</div>
	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
				<% @books.reverse_each do |book| %>
				<div class="media">
				    <div class="media-left media-top">
						<%= link_to (book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</div>
					<div class="media-body">
					<h4 class="media-heading"><%= link_to book.title,book, class: "book_#{book.id}" %></h4>
					<%= book.body %><iframe width="560" height="315" src="https://www.youtube.com/embed/<%= book.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					<a href="#comments">コメント数:<%= @book.book_comments.count %></a>
				</tr>
	               </div>
                </div>
				<% end %>
	</div>
  </div>
</div>
<!--books一覧 -->

